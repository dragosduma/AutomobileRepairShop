@model AutomobileRepairShop.Models.User

@{
    <!DOCTYPE html>
    <html>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5" id="employeeForm">

                        <!-- registration form -->
                        <form asp-controller="Registration" asp-action="Register" method="post" style="width: 23rem;">

                            <!-- "Register" title -->
                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Add employee</h3>

                            <!-- Name input & label -->
                            <div class="form-outline mb-4">
                                <input asp-for="Name" type="name" for="name" class="form-control form-control-lg" />
                                <label class="form-label" for="name">Name</label>
                            </div>

                            <!-- Surname input & label -->
                            <div class="form-outline mb-4">
                                <input asp-for="Surname" type="surname" id="surname" class="form-control form-control-lg" />
                                <label class="form-label" for="surname">Surname</label>
                            </div>

                            <!-- Address input & label -->
                            <div class="form-outline mb-4">
                                <input asp-for="Address" type="address" id="address" class="form-control form-control-lg" />
                                <label class="form-label" for="address">Address</label>
                            </div>

                            <!-- Birthday input & label -->
                            <div class="form-outline mb-4">
                                <input asp-for="Birthday" type="date" id="birthday" class="form-control form-control-lg" />
                                <label class="form-label" for="birthday">Birthday</label>
                            </div>

                            <!-- Email input & label -->
                            <div class="form-outline mb-4">
                                @ViewBag.EmailExists  <!-- To customise -->
                                <input asp-for="Email" type="email" id="email" class="form-control form-control-lg" />
                                <label class="form-label" for="email">Email address</label>
                            </div>

                            <!-- Password input & label -->
                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                                <label class="form-label" for="password">Password</label>
                            </div>

                            <!-- Submit button -->
                            <div class="pt-1 mb-4">
                                <button class="btn btn-info btn-lg btn-block" type="submit">Add</button>
                            </div>

                        </form> <!--end of form  -->

                    </div>

                </div>
            </div>
        </div>
    </section>
    </html>
}
