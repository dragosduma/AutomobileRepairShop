
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutomobileRepairShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutomobileRepairShop.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AutomobileRepairShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                            <!--Admin dashboard-->
                            @if (@ViewBag.IsLogged == true)
                            {
                                @if (@ViewBag.IsAdmin == true)
                                {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin dashboard
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="AddEmployee">Add employee</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="EditAccounts">Edit existing accounts</a></li>
                                    </ul>
                                </li>
                                }
                                else if (@ViewBag.IsEmployee == true)
                                {
                                    <li class="nav-item"><a id="bill" class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Bills">Create bill</a></li>
                                }
                                else 
                                {
                                    <li class="nav-item"><a id="appointment" class="nav-link text-darK" asp-area="" asp-controller="Home" asp-action="Appointments">Make an appointment</a></li>
                                }
                            }
                    </ul>
                    <ul class="navbar-nav ms-auto flex-nowrap">

                        <!--Login, Register, Logout-->
                        @if (@ViewBag.IsLogged == false) //Login Register
                        {
                            <li class="nav-item"><a id="login" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a></li>
                            <li class="nav-item"><a id="register" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Register">Register</a></li>
                        }
                        else @if (@ViewBag.IsLogged == true)
                        { //Logout
                            <li class="nav-item"><a id="logout" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AutomobileRepairShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
