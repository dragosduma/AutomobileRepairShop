@model AutomobileRepairShop.Models.User

@{
<!DOCTYPE html>
<html>
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">AReS</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    
                @using (Html.BeginForm("Login", "Registration", FormMethod.Post)){
                    <!-- registration form -->
                    <!-- <form style="width: 23rem;"> -->

                        <!-- "Register" title -->
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>
                        
                        <!-- Name input & label -->
                        <div class="form-outline mb-4">
                            <input asp-for="Name" type="name" for="name" class="form-control form-control-lg" />
                            <label class="form-label" for="name">Name</label>
                        </div>
                        
                        <!-- Surname input & label -->
                       <div class="form-outline mb-4">
                            <input asp-for="Surname" type="surname" id="surname" class="form-control form-control-lg" />
                            <label class="form-label" for="surname">Surname</label>
                        </div>
                        
                        <!-- Address input & label -->
                       <div class="form-outline mb-4">
                            <input asp-for="Address" type="address" id="address" class="form-control form-control-lg" />
                            <label class="form-label" for="address">Address</label>
                        </div>

                        <!-- Birthday input & label -->
                       <div class="form-outline mb-4">
                            <input asp-for="Birthday" type="date" id="birthday" class="form-control form-control-lg" />
                            <label class="form-label" for="birthday">Birthday</label>
                        </div>

                        <!-- Email input & label -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="email" class="form-control form-control-lg" />
                            <label class="form-label" for="email">Email address</label>
                        </div>

                        <!-- Password input & label -->
                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                            <label class="form-label" for="password">Password</label>
                        </div>

                        <!-- Submit button -->
                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Register</button>
                        </div>

                        <!-- Login redirect  -->
                        <p>Already have an account? <a href="/Home/Login" class="link-info">Login here</a></p>

                    <!-- </form> --><!--end of form  -->
                    }
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/images/register-picture.jpg" alt="Login image" width=100% height=100% style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
</html>
}